<section class='cards'>
    <% data.forEach(ele=>{%>
        <div class='card'>
            <div id='main-card'>
                <img class='card-img' src=<%=ele.image_url%> alt="">
                <h3 class="card-title">
                    <%= ele.title%>
                </h3>
                <br>
                <h5 class="card-auther">
                    <%= ele.author%>
                </h5>
                <br>
                <p class="card-des"  style="display: <%= isVisDis%>">
                    <%- ele.description%>
                </p>
                <a href="/books/<%= ele.id%>">
                    <button class="home-detalis" style="display: <%= isVis%>">
                        View Details
                    </button>
                </a>
                <div id = 'delete-edit-div'>
                    <button class="delete-update" style="display: <%= isVisDis%>" onclick='showForm()'>update details</button>
                    <form method="POST" action='/books/<%= ele.id%>?_method=DELETE' id = 'delete-form'><input  class="delete-update" type="submit" style="display: <%= isVisDis%>" value="delete detail" ></form>
                </div>
            </div>
            <%- include ('./edit.ejs', {ele: ele, submitVis:'none'}) %>
        </div>
        <%})%>
</section>