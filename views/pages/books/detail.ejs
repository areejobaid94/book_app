<section class='cards'>
    <% data.forEach(ele=>{%>
        <div class='card'>
            <img class='card-img' src=<%=ele.image_url%> alt="">
            <h3 class="card-title">
                <%= ele.title%>
            </h3>
            <br>
            <h5 class="card-auther">
                <%= ele.author%>
            </h5>
            <br>
            <p class="card-des"  style="visibility: <%= isVisDis%>;">
                <%- ele.description%>
            </p>
            <a href="/books/<%= ele.id%>">
                <button style='visibility: <%= isVis%>;'>
                    View Details
                </button>
            </a>
        </div>
        <%})%>
</section>